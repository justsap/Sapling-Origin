{
  "type": "origins:multiple", 

    "sunlight":{
        "type": "origins:action_over_time",
        "entity_action": 
          {
            "type": "origins:feed",
            "food": 20,
            "saturation": 0.4
          },
        "interval": 10,
        "condition": {
          "type": "origins:and",
          "conditions": [
            {
              "type": "origins:in_block",
              "block_condition": {
                "type": "origins:light_level",
                "light_type": "sky",
                "comparison": ">=",
                "compare_to": 10
              }
            },
            {
              "type": "origins:daytime"
            }
          ]
        }
      },

    "raining":{
      "type": "origins:action_over_time",
      "entity_action": 
        {
            "type": "origins:apply_effect",
            "effect": {
                "effect": "minecraft:regeneration",
                "duration": 80,
                "show_particles": false,
                "amplifier": 1,
                "show_icon": false
            }
        },
      "interval": 20,
      "condition": {
        "type":"origins:in_rain"
      }
    },

    "water-saturation":{
      "type": "origins:action_on_item_use",
      "entity_action": {
          "type": "origins:feed",
          "food": 4,
          "saturation": 2
      },
      "item_condition": {
          "type": "origins:ingredient",
          "ingredient": {
              "item": "minecraft:potion"
          }
      }
    },

    "shadows":{
      "type": "origins:action_over_time",
      "entity_action": 
        {
            "type": "origins:apply_effect",
            "effects": [
              {
                  "effect": "minecraft:weakness",
                  "duration": 80,
                  "amplifier": 1,
                  "show_particles": false,
                  "show_icon": true
              },
              {
                  "effect": "minecraft:hunger",
                  "duration": 80,
                  "amplifier": 0,
                  "show_particles": false,
                  "show_icon": true
              }
          ]
        },
            "condition": {
              "type": "origins:in_block",
              "block_condition": {
              "type": "origins:light_level",
              "light_type": "sky",
              "comparison": "<",
              "compare_to": 8 }
            },
            "interval": 20
    },

    "nofood": {
      "type": "origins:prevent_item_use",
      "item_condition": {
        "type": "origins:food"
      },
      "name":"Autotroph: \"No Food\"",
      "hidden": true
    },

    "name": "Autotroph",
    "description": "Sunlight & water [bottles] are your only source of food, and being in the dark makes you weak.",
    "badges": [
      {
        "type": "origins:tooltip",
        "sprite": "origins:textures/gui/community/silent/badge/icons/sun_icon.png",
        "text": "Effects Given:\n - Sunlight: Fills Hunger & Saturation\n - Potions/Water Bottles: 2 Hunger Points\n - Being in Rain: Regeneration\n - Being in the Dark: Weakness & Hunger"
      }
    ]
  }